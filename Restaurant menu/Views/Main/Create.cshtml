@{
    
    bool isEdit = Model == null ? false : true;
    isEdit = false;
    var uri = isEdit ? Url.Action("Edit") : Url.Action("Create");
    ViewData["Title"] = "Create";

}
<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href="CreateStyle.css" rel="stylesheet" />
    <title>Создание</title>
</head>
<body>
    <a href="/" class="material-icons">
        keyboard_arrow_left
    </a>
    <h2 id="mainh">Создание блюда</h2>

    <form method="post" class="input-group" action="@uri ">

        @if (isEdit)
        {
            <p>Название:</p>
            <input type="text" class="form-control" name="name" value="@Model.Name">

            <p>Состав:</p>
            <input type="text" class="form-control" name="consist" value="@Model.Consist">

            <p>Описание:</p>
            <input type="text" class="form-control" name="description" value="@Model.Description">

            <p>Цена:</p>
            <input type="text" class="form-control" name="price" value="@Model.Price">

            <p>Граммовка:</p>
            <input type="text" class="form-control" name="gram" value="@Model.Gram">

            <p>Калорийность блюда:</p>
            <input type="text" class="form-control" name="calorie" value="@Model.Calorific">

            <p>Время Приготовления:</p>
            <input type="text" class="form-control" name="cookTime" value="@Model.CookTime">
            <br />
            <button type="submit" id="Create">Создать</button>
        }
        else
        {
            <p>Название:</p>
            <input type="text" class="form-control" name="name">

            <p>Состав:</p>
            <input type="text" class="form-control" name="consist">

            <p>Описание:</p>
            <input type="text" class="form-control" name="description">

            <p>Цена:</p>
            <input type="text" class="form-control" name="price">

            <p>Граммовка:</p>
            <input type="text" class="form-control" name="gram">

            <p>Калорийность блюда:</p>
            <input type="text" class="form-control" name="calorie">

            <p>Время Приготовления:</p>
            <input type="text" class="form-control" name="cookTime">
            <br />
            <button type="submit" id="Create">Создать</button>
        }


    </form>

</body>
</html>

